<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="外观设置">
        <EditTextPreference
            android:defaultValue="Default value"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="编辑个人信息"
            android:key="set_info"
            android:dialogLayout="@layout/dialog"/>

        <EditTextPreference
            android:defaultValue="抱歉暂未开放"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="更换主题"
            android:key="edit_text_preference_1"
            android:enabled="false"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="云同步">

        <EditTextPreference
            android:defaultValue="Default value"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="登陆账号"
            android:key="edit_text_preference_2"
            android:enabled="false" />
        <SwitchPreference
            android:defaultValue="false"
            android:title="自动同步"
            android:key="switch_preference_2"
            android:enabled="false" />
        <EditTextPreference
            android:defaultValue="手动同步"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="手动同步"
            android:key="edit_text_preference_2"
            android:enabled="false" />
        <SwitchPreference
            android:defaultValue="false"
            android:title="Love Mode"
            android:key="switch_preference_3"
            android:enabled="false" />
    </PreferenceCategory>


    <PreferenceCategory android:title="性能">
        <SwitchPreference
            android:defaultValue="false"
            android:title="上帝模式"
            android:key="switch_preference_1" />
        <SwitchPreference
            android:defaultValue="true"
            android:title="Markdown排版"
            android:key="switch_preference_2"
            android:enabled="false" />
    </PreferenceCategory>

</PreferenceScreen>